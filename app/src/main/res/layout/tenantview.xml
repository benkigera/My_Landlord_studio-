<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <com.google.android.material.card.MaterialCardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="45dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/paymentlogo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tenant_profile" />
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/textView_FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ben"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:padding="5dp"
                android:elevation="@dimen/cardview_default_radius"
                android:layout_gravity="center"/>

            <TextView   android:id="@+id/textView_SecondName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kigera"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_gravity="center"/>

            <TextView   android:id="@+id/entry_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" |2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_gravity="center"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="#F5F0F0">


            <TextView
                android:id="@+id/textView_houseNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Number: A12"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: benkigera@gmail.com"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            <TextView
                android:id="@+id/textView_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number: 0725166470"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView_Monthly_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rent: KSH 7500"
                android:textSize="20sp"
                android:textStyle="bold" />




        </LinearLayout>

       </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>